{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "types": ["react", "react-dom"],
    "outDir": "./dist", // Adicione esta linha para especificar o diretório de saída
    "rootDir": "./src", // Adicione esta linha para especificar o diretório raiz
    "noEmit": true // Adicione esta linha para evitar a emissão de arquivos JS
  },
  "include": ["src"]
}